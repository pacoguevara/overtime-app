<div class="logo">
  <h1>Time Tracker</h1>
</div>
<% if current_user %>
  <ul class="custom-nav nav nav-tabs">
    <li class="nav-item <%= active?(root_path) %>">
      <%= link_to "Home", root_path %>
    </li>
    <li class="nav-item <%= active?(posts_path) %>">
      <%= link_to "Time entries", posts_path %>
    </li> 
    <li class="nav-item <%= active?(new_post_path) %>">
      <%= link_to "Add new entrie", new_post_path, id: "new_post_from_nav" %>
    </li>

    <li class="nav-item dropdown ml-md-auto pull-right">
       <a class="nav-link dropdown-toggle" href="http://example.com" id="navbarDropdownMenuLink" data-toggle="dropdown">Account</a>
       <ul class="dropdown-menu">
         <% if current_user.try(:type) === "AdminUser" %>
           <li>
             <%= link_to "ADMIN", admin_root_path %>
           </li>
           <li class="divider"></li>
         <% end %>
         <li>
           <%= link_to "Log out", destroy_user_session_path, method: :delete %>
         </li>
       </ul>
    </li>
  </ul>
<% end %>
